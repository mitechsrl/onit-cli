{
    "ignorePatterns": [
        "node_modules"
    ],
    "overrides": [
        {
            "files": "**/*.js",
            "env": {
                "commonjs": true,
                "es6": true
            },
            "extends": [
                "standard"
            ],
            "parserOptions": {
                "ecmaVersion": 2018
            },
            "rules": {
                "semi": [
                    "error",
                    "always"
                ],
                "indent": [
                    "error",
                    4
                ],
                "no-multiple-empty-lines": [
                    "error",
                    {
                        "max": 1,
                        "maxEOF": 1
                    }
                ]
            }
        }
    ]
}